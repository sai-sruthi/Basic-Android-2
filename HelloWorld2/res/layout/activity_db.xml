<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DBActivity" >

    <TextView
        android:id="@+id/txtmailto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="48dp"
        android:text="ID" />

    <TextView
        android:id="@+id/txtmailsubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtmailto"
        android:layout_below="@+id/txtmailto"
        android:layout_marginTop="25dp"
        android:text="Name" />

    <TextView
        android:id="@+id/txtmailmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtmailsubject"
        android:layout_below="@+id/txtmailsubject"
        android:layout_marginTop="33dp"
        android:text="Ph. No." />

    <EditText
        android:id="@+id/edtdbid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtmailsubject"
        android:layout_toRightOf="@+id/txtmailto"
        android:ems="10" />

    <EditText
        android:id="@+id/edtdbname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtmailsubject"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <EditText
        android:id="@+id/edtdbphno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtmailmsg"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <Button
        android:id="@+id/btndbsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtmailsubject"
        android:layout_below="@+id/txtmailmsg"
        android:layout_marginTop="62dp"
        android:text="Save" />

    <Button
        android:id="@+id/btndbdelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btndbupdate"
        android:layout_alignBottom="@+id/btndbupdate"
        android:layout_alignRight="@+id/edtdbphno"
        android:text="Delete" />

    <Button
        android:id="@+id/btndbupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btndbsave"
        android:layout_alignBottom="@+id/btndbsave"
        android:layout_centerHorizontal="true"
        android:text="Update" />

    <Button
        android:id="@+id/btndbsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btndbsave"
        android:layout_below="@+id/btndbsave"
        android:layout_marginTop="40dp"
        android:text="Search" />

</RelativeLayout>