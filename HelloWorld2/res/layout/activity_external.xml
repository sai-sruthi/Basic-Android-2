<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ExternalActivity" >

    <Button
        android:id="@+id/btnsaveextern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtdataextern"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Save" />

    <EditText
        android:id="@+id/edtdataextern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtfnameextern"
        android:layout_below="@+id/txtdataextern"
        android:ems="10" />

    <TextView
        android:id="@+id/txtdataextern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtfnameextern"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="22dp"
        android:text="Data" />

    <TextView
        android:id="@+id/txtfnameextern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edtfnameextern"
        android:layout_alignParentLeft="true"
        android:text="File Name" />

    <EditText
        android:id="@+id/edtfnameextern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:ems="10" />

    <Button
        android:id="@+id/btnreadextern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnsaveextern"
        android:layout_alignBottom="@+id/btnsaveextern"
        android:layout_alignRight="@+id/edtdataextern"
        android:text="Read" />

</RelativeLayout>